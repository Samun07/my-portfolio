{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/contact-me", "dest": "/pages/contact-me.html" },
    { "src": "/projects", "dest": "/pages/projects.html" },
    { "src": "/resume", "dest": "/pages/resume.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
